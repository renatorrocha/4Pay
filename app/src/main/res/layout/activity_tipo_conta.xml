<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_alternativo"
        tools:context=".view.Login_Cadastro.Cadastro">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="26dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Defina o tipo de conta"
            android:textColor="@color/preto"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCategoria"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:fontFamily="@font/nunito_regular"
            android:text="Escolha uma categoria de conta"
            android:textColor="@color/preto"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitulo" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checkedButton="@id/rbtnComum"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvCategoria"
            app:layout_constraintTop_toBottomOf="@+id/tvCategoria">

            <RadioButton
                android:id="@+id/rbtnComum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:buttonTint="@color/preto"
                android:fontFamily="@font/nunito_regular"
                android:text="Comum"
                android:textColor="@color/preto"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/rbtnSuper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:buttonTint="@color/preto"
                android:fontFamily="@font/nunito_regular"
                android:text="Super"
                android:textColor="@color/preto"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/rbtnPremium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:buttonTint="@color/preto"
                android:fontFamily="@font/nunito_regular"
                android:text="Premium"
                android:textColor="@color/preto"
                android:textSize="16sp" />
        </RadioGroup>

        <TextView
            android:id="@+id/tvTipoConta"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/nunito_regular"
            android:text="Escolha o tipo de conta"
            android:textColor="@color/preto"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checkedButton="@id/rbtnPoupanca"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvTipoConta"
            app:layout_constraintTop_toBottomOf="@+id/tvTipoConta">

            <RadioButton
                android:id="@+id/rbtnPoupanca"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:buttonTint="@color/preto"
                android:fontFamily="@font/nunito_regular"
                android:text="Conta PoupanÃ§a"
                android:textColor="@color/preto"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/rbtnCorrente"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:buttonTint="@color/preto"
                android:fontFamily="@font/nunito_regular"
                android:text="Conta Corrente"
                android:textColor="@color/preto"
                android:textSize="16sp" />

        </RadioGroup>

        <Button
            android:id="@+id/btnEntrar"
            android:layout_width="280dp"
            android:layout_height="54dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/btnlogin"
            android:fontFamily="@font/nunito_bold"
            android:text="Finalizar"
            android:textAllCaps="false"
            android:textColor="@color/branco"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>